{
  "name": "workflow",
  "version": "4.0.1-beta.48",
  "description": "Workflow DevKit - Build durable, resilient, and observable workflows",
  "main": "dist/typescript-plugin.cjs",
  "type": "module",
  "bin": {
    "workflow": "./bin/run.js",
    "wf": "./bin/run.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel/workflow.git",
    "directory": "packages/workflow"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "workflow": "./dist/workflow.js",
      "require": "./dist/typescript-plugin.cjs",
      "default": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api.d.ts",
      "workflow": "./dist/api-workflow.js",
      "default": "./dist/api.js"
    },
    "./internal/errors": "./dist/internal/errors.js",
    "./internal/serialization": "./dist/internal/serialization.js",
    "./internal/builtins": "./dist/internal/builtins.js",
    "./internal/private": "./dist/internal/private.js",
    "./internal/class-serialization": "./dist/internal/class-serialization.js",
    "./next": "./dist/next.cjs",
    "./nitro": "./dist/nitro.js",
    "./nuxt": "./dist/nuxt.js",
    "./sveltekit": "./dist/sveltekit.js",
    "./astro": "./dist/astro.js",
    "./vite": "./dist/vite.js",
    "./runtime": "./dist/runtime.js"
  },
  "dependencies": {
    "ms": "2.1.3",
    "@workflow/astro": "4.0.0-beta.22",
    "@workflow/cli": "4.0.1-beta.48",
    "@workflow/core": "4.0.1-beta.39",
    "@workflow/errors": "4.0.1-beta.13",
    "@workflow/typescript-plugin": "4.0.1-beta.4",
    "@workflow/next": "4.0.1-beta.44",
    "@workflow/nuxt": "4.0.1-beta.32",
    "@workflow/nitro": "4.0.1-beta.43",
    "@workflow/sveltekit": "4.0.0-beta.37",
    "@workflow/rollup": "4.0.0-beta.7"
  },
  "devDependencies": {
    "@types/ms": "2.1.0",
    "@types/node": "22.19.0",
    "@workflow/tsconfig": "4.0.1-beta.0"
  },
  "peerDependencies": {
    "@opentelemetry/api": "1"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/api": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsc && chmod +x bin/run.js",
    "clean": "tsc --build --clean && rm -r dist ||:",
    "dev": "tsc --watch",
    "test": "vitest run src",
    "typecheck": "tsc --noEmit"
  }
}